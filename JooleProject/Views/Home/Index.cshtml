<body>
    <img src="~/images/LogoBig.png" alt="Sample Photo" class="wrapper" style="padding-bottom:400px" />
    <div class="wrapper form-inline">
        <h2 style="text-align:center">Building Product Selection Platform</h2>

        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="login" @*style="background-color:aqua"*@>
                @*<h4>tblUser</h4>*@
                @*<hr />*@
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @*Show details are saved successfully message*@
                    <div class="col-lg-12">@ViewBag.Message</div>
                </div>

                <div class="divpadding">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "width100", placeholder = "Username or Email" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>

                <div class="divpadding">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "width100", placeholder = "Password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>


                <div class="submit-btn">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</body>


